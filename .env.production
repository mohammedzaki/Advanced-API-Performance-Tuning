# Production Environment Configuration

# Service Ports
SPRING_PORT=8080
DOTNET_REST_PORT=8081
DOTNET_GRPC_PORT=8083
GRPC_CLIENT_TEST_PORT=8084
REACT_DASHBOARD_PORT=3001

# OpenTelemetry Configuration
OTEL_SERVICE_NAME_SPRING=spring-sample-prod
OTEL_SERVICE_NAME_DOTNET=dotnet-sample-prod
OTEL_SERVICE_NAME_GRPC_CLIENT=grpc-client-test-prod
OTEL_EXPORTER_OTLP_ENDPOINT=https://your-otel-collector.com:4318/v1/traces
OTEL_RESOURCE_ATTRIBUTES=service.version=1.0.0,deployment.environment=production

# Observability Ports
JAEGER_UI_PORT=16686
JAEGER_COLLECTOR_PORT=14250
OTEL_COLLECTOR_GRPC_PORT=4317
OTEL_COLLECTOR_HTTP_PORT=4318
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Database Configuration
SQL_SERVER_HOST=your-production-sql-server.com
SQL_SERVER_PORT=1433
SQL_SERVER_DATABASE=AdventureWorks2022
SQL_SERVER_USER=app_user
SQL_SERVER_PASSWORD=${SQL_SERVER_PASSWORD}

# Performance Testing
K6_BASE_URL=http://localhost:8081

# React Dashboard Configuration
REACT_APP_API_URL=http://localhost:8081
K6_CONCURRENT_USERS=50
K6_DURATION=5m
K6_RAMP_UP_TIME=30s

# Application Configuration
ASPNETCORE_ENVIRONMENT=Production
SPRING_PROFILES_ACTIVE=production

# Report API Configuration
REPORT_DEFAULT_MONTHS=12
REPORT_DEFAULT_RECORDS=1000
REPORT_MAX_COMPLEXITY=5

# gRPC Configuration
GRPC_ENABLE_REFLECTION=false
GRPC_ENABLE_DETAILED_ERRORS=false
KESTREL_ENDPOINT_PROTOCOLS_HTTP1=Http1
KESTREL_ENDPOINT_PROTOCOLS_HTTP2=Http2

# Network Configuration
DOCKER_NETWORK=perf-net-prod
COMPOSE_PROJECT_NAME=demos-prod

# Security
ENABLE_HTTPS=true
CERT_PATH=/etc/ssl/certs
KEY_PATH=/etc/ssl/private